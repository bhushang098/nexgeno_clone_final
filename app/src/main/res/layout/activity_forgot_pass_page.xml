<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:layout_height="match_parent"
    tools:context="com.twilio.video.app.ForgotPassPage">

    <EditText
        android:id="@+id/et_phone_forgot_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edit_text_border"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:hint="  Registered number "
        android:inputType="number"
        android:padding="10dp" />

    <Button
        android:id="@+id/btn_get_otp_on_forgot_pass"
        android:layout_marginTop="50dp"
        android:padding="20dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/joinLayoutTextColor"
        android:layout_width="wrap_content"
        android:background="@drawable/button_back_primarycolor"
        android:layout_height="wrap_content"
        android:text=" Request OTP "/>

    <EditText
        android:visibility="gone"
        android:id="@+id/et_otp_forgot_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edit_text_border"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:hint=" OTP "
        android:inputType="number"
        android:padding="10dp" />
    <EditText
        android:visibility="gone"
        android:id="@+id/et_pass1_forgot_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edit_text_border"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="  New Password "
        android:inputType="textPassword"
        android:padding="10dp"/>
    <EditText
        android:visibility="gone"
        android:id="@+id/et_pass2_forgot_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edit_text_border"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint=" Conform New Password "
        android:inputType="textPassword"
        android:padding="10dp" />


    <Button
        android:visibility="gone"
        android:id="@+id/btn_change_pass_on_forgot_pass"
        android:layout_marginTop="50dp"
        android:padding="20dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/joinLayoutTextColor"
        android:layout_width="wrap_content"
        android:background="@drawable/button_back_primarycolor"
        android:layout_height="wrap_content"
        android:text="Change Password "/>



</LinearLayout>