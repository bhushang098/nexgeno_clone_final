<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add/Edit Rating "/>

            <TextView
                android:id="@+id/tv_close_taring_popup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:text="Close" />

            <ImageView
                android:id="@+id/iv_close_rating_popup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_baseline_highlight_off_24" />

        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />


       <androidx.appcompat.widget.AppCompatRatingBar
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:numStars="5"
           android:layout_marginTop="10dp"
           android:layout_gravity="center"
           android:scaleX="0.5"
           android:scaleY="0.5"
           android:id="@+id/rtb_popup"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Review"
            android:textStyle="bold"
            android:padding="3dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/cardDarkBackground"/>

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/et_review"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:padding="30dp"
    android:background="@drawable/edit_text_border"/>

        <View
            android:id="@+id/divider2"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:padding="10dp"
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Close"
                android:textAllCaps="false"
                android:id="@+id/btn_close_rating_popup"
                android:background="@drawable/edit_text_border"/>

            <Button
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save Changes"
                android:padding="10dp"
                android:textAllCaps="false"
                android:layout_marginRight="20dp"
                android:id="@+id/btn_save_rating"
                android:background="@drawable/edit_text_border"/>
        </LinearLayout>


    </LinearLayout>



</androidx.cardview.widget.CardView>