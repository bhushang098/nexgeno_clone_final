<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.twilio.video.app.FormPages.CreateNewSkill">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title=" New Skill "
                android:background="@color/colorPrimary"
                android:id="@+id/tb_new_skill"
                app:titleTextColor="#ffffff"/>


            <androidx.cardview.widget.CardView
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:layout_below="@+id/tb_new_skill"
                android:id="@+id/cv_create_new_skill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    >

                    <TextView
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:text="Skill Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:padding="10dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edit_text_border"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_new_skill_name"/>


                    <TextView
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:text="Who Can Post To Skill"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <Spinner
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edit_text_border"
                        android:id="@+id/spinner_who_can_post_to_skill"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" />

                    <TextView
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:text="Who Can See Post"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <Spinner
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edit_text_border"
                        android:id="@+id/spinner_who_can_see_post_on_skill"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" />

                    <TextView
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:text="Joining Fee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:padding="10dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edit_text_border"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:id="@+id/et_new_skill_fees"/>
                    <TextView
                        android:padding="5dp"
                        android:text="INR"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                    <TextView
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:text="About"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:padding="10dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edit_text_border"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_about_new_skill"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_commit_new_skill"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/button_back_primarycolor"
                            android:padding="5dp"
                            android:text=" Create "
                            android:textColor="#ffffff" />

                        <androidx.legacy.widget.Space
                            android:layout_width="100dp"
                            android:layout_height="1dp" />

                        <Button
                            android:id="@+id/btn_delete_skill"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/btn_back_red"
                            android:padding="5dp"
                            android:text=" Delete Skill "
                            android:textColor="#ffffff"
                            android:visibility="gone" />

                    </LinearLayout>


                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>