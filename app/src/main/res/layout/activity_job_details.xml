<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.twilio.video.app.MainPages.JobDetails">

    <androidx.appcompat.widget.Toolbar
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tb_job_details">
        <TextView
            android:text="Job Name"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="#E02B2929"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_job_name_on_tb"/>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_baseline_location_on_24"/>


                    <TextView
                        android:textStyle="bold"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location"/>

            </LinearLayout>

            <TextView
                android:padding="1dp"
                android:layout_marginLeft="49dp"
                android:text="Location : ...."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_job_location"/>
<!--            //sallary-->

            <LinearLayout
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    />


                <TextView
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Salary "/>

            </LinearLayout>

            <TextView
                android:padding="1dp"
                android:layout_marginLeft="49dp"
                android:text="Salary : ...."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_job_salary"/>

<!--            //JobOverview-->
            <LinearLayout
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>


                <TextView
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Job Overview"/>

            </LinearLayout>

            <TextView
                android:padding="1dp"
                android:layout_marginLeft="49dp"
                android:text="Description : ...."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_job_overview"/>

            <androidx.cardview.widget.CardView
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="20dp"
                android:padding="5dp"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="@color/cardDarkBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Last Date For Apply"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:padding="10dp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_last_date_to_apply"
                android:text="12/12/2020"/>

            <Button
                android:id="@+id/btn_job_apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_border"
                android:text="Apply"
                android:layout_marginTop="10dp"
                android:elevation="5dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>