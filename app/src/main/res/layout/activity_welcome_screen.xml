<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.twilio.video.app.WelcomeScreen">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/welcome_image"/>

    <TextView
        android:layout_marginTop="80dp"
        android:id="@+id/tv_appName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="8dp"
        android:text="nexgeno"
        android:textColor="@color/coral"
        android:textSize="32sp"
        android:textStyle="bold" />


    <RelativeLayout
        android:layout_marginBottom="25dp"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



        <LinearLayout
            android:id="@+id/ll_quote"
            android:padding="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

<!--            <TextView-->
<!--                android:gravity="center"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_centerHorizontal="true"-->
<!--                android:text="Bringing you closer"-->
<!--                android:textColor="#FFBF00"-->
<!--                android:textSize="20sp"-->
<!--                android:textStyle="bold" />-->

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/welcome_text_bg"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text=" Bringing you closer to the Education and Professional Life"
                android:textColor="#12232B"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <Button
            android:layout_below="@+id/ll_quote"
            android:id="@+id/btn_welcome"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttob_back"
            android:text="Get Started"
            android:textColor="@color/colorWhite"
            android:textSize="22sp"/>


    </RelativeLayout>

    </RelativeLayout>
